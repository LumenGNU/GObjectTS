{
    "name": "examples-for-gobject-ts",
    "displayName": "Examples for GObjectTS",
    "version": "0.0.0",
    "description": "Examples for GObjectTS decorators library",
    "type": "module",
    "private": true,
    "homepage": "https://github.com/LumenGNU/GObjectTS/tree/main",
    "sideEffects": false,
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "@girs/adw-1": "^1.8.0-4.0.0-beta.25",
        "@girs/gdk-4.0": "^4.0.0-4.0.0-beta.25",
        "@girs/gio-2.0": "^2.84.2-4.0.0-beta.25",
        "@girs/giounix-2.0": "^2.0.0-4.0.0-beta.25",
        "@girs/gjs": "^4.0.0-beta.25",
        "@girs/glib-2.0": "^2.84.2-4.0.0-beta.25",
        "@girs/glibunix-2.0": "^2.0.0-4.0.0-beta.25",
        "@girs/gobject-2.0": "^2.84.2-4.0.0-beta.25",
        "@girs/gtk-4.0": "^4.19.1-4.0.0-beta.25",
        "@girs/pango-1.0": "^1.56.4-4.0.0-beta.25",
        "@types/jasmine": "^5.1.8",
        "eslint": "^9.27.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    },
    "scripts": {
        "build": "npx -- tsc && npm run made-executable",
        "clean": "find ./ -name '*.js' -not -path './node_modules/*' -delete; find ./ -name '*.tsbuildinfo' -not -path './node_modules/*' -delete",
        "rebuild": "npm run clean && npm run build",
        "made-executable": "find ./ -name '*.js' -not -path './node_modules/*' -exec sh -c 'head -3 \"$1\" | grep -q \"^#!\" && chmod +x \"$1\"' _ {} \\;",
        
        "example:hello-world:Adwaita": "npm run build && ./Hello-World/Adwaita.js",

        "example:tick:CustomGObjectSignals": "npm run build && ./Tick/CustomGObjectSignals.js",
        "example:tick:CustomGObjectDeclarative": "npm run build && ./Tick/CustomGObjectDeclarative.js",
        "example:tick:NativeGJSSignalSystem": "npm run build && ./Tick/NativeGJSSignalSystem.js",


        "setup-resources": "cd Styling.Hello-word && glib-compile-resources gresource.xml"
    }
}
